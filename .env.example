# QEW Innovation Corridor - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# =============================================================================
# SERVICE PORTS
# =============================================================================
# Development server port (standardized per universal_port_config.md)
# IMPORTANT: Always use port 8200 for QEW project (NEVER 3000)
VITE_PORT=8200

# =============================================================================
# CLAUDE AI API
# =============================================================================
# Get your API key from: https://console.anthropic.com/
# Required for: Real-time work zone detection (Issue #4)
VITE_CLAUDE_API_KEY=your-api-key-here

# Claude Vision model to use
VITE_CLAUDE_MODEL=claude-3-5-sonnet-20250219

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable real AI analysis (vs simulated data for demo)
# Set to 'true' when Claude API key is configured
VITE_ENABLE_REAL_AI_ANALYSIS=false

# Enable Claude Vision API for work zone detection
# This is the CRITICAL feature for SaaS (Issue #4)
VITE_ENABLE_VISION_API=false

# Enable image upload UI for interactive demo
VITE_ENABLE_IMAGE_UPLOAD=false

# =============================================================================
# COMPASS CAMERA INTEGRATION (Future)
# =============================================================================
# MTO COMPASS API credentials (requires OVIN approval)
# VITE_COMPASS_API_KEY=your-compass-api-key
# VITE_COMPASS_API_URL=https://compass.mto.gov.on.ca/api/v1

# Camera feed refresh rate (frames per second)
# VITE_CAMERA_FPS=1

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Base URL for GitHub Pages deployment
# Leave empty for local development
# VITE_BASE_URL=/QEW-Innovation-Corridor/

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Enable debug logging
VITE_DEBUG=false

# Simulate network latency (ms) for testing
VITE_SIMULATE_LATENCY=0

# Number of simulated vehicles on map
VITE_NUM_VEHICLES=10

# =============================================================================
# MTO COMPLIANCE
# =============================================================================
# Enable MTO BOOK 7 compliance checking
VITE_ENABLE_MTO_COMPLIANCE=true

# Enable FIPPA privacy compliance
VITE_ENABLE_FIPPA_COMPLIANCE=true

# =============================================================================
# V2X COMMUNICATION (Future)
# =============================================================================
# Enable V2X/V2I alert broadcasting
# VITE_ENABLE_V2X=false

# RSU endpoint for alert broadcast
# VITE_RSU_ENDPOINT=https://rsu.qew.ovin.ca/api/v1/alerts

# =============================================================================
# GCP CONFIGURATION (Phase 2 - Backend)
# =============================================================================
# Google Cloud Platform Project
GCP_PROJECT_ID=qew-innovation-pilot
GCP_PROJECT_NUMBER=843899919832
GCP_REGION=northamerica-northeast1
GCP_ZONE=northamerica-northeast1-a

# Cloud Run Service URLs (Phase 2 - after deployment)
# VITE_DETECTION_AGENT_URL=https://detection-agent-HASH-nn.a.run.app
# VITE_ASSESSMENT_AGENT_URL=https://assessment-agent-HASH-nn.a.run.app
# VITE_COMMUNICATION_AGENT_URL=https://communication-agent-HASH-nn.a.run.app
# VITE_API_GATEWAY_URL=https://api-gateway-HASH-nn.a.run.app

# Pub/Sub Topics
# PUBSUB_CAMERA_FEEDS=compass-camera-feeds
# PUBSUB_DETECTIONS=work-zone-detections
# PUBSUB_ASSESSMENTS=risk-assessments
# PUBSUB_BROADCASTS=rsu-broadcasts

# Cloud Storage Buckets
